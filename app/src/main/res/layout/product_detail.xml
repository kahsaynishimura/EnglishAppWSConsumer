<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_detail"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/name"
            android:textIsSelectable="true"
            tools:context="com.karina.alicesadventures.ProductDetailFragment"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/product_detail"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/name"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qr_code"
            android:visibility="gone"
            android:layout_below="@+id/tvPoints"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/first_screen" />

        <Button
            android:id="@+id/btn_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:onClick="trade"
            android:text="@string/log_in"
            android:layout_below="@+id/qr_code"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</ScrollView>